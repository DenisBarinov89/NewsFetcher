<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:backgroundTint="?colorBackgroundPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivArticleFromList"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_image_missing"/>

        <TextView
            android:id="@+id/tvTitle"
            style="@style/BoldText.ArticleTitle"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvDescription"
            style="@style/MediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/tvDate"
            style="@style/SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            />
    </LinearLayout>



    <ImageView
        android:id="@+id/ivBookmarkAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="8dp"
        android:visibility="gone"
        android:src="@drawable/ic_selected_to_bookmarks" />

    <ImageView
        android:id="@+id/ivAddToBookmarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="8dp"
        android:visibility="gone"
        android:src="@drawable/ic_add_to_bookmarks" />

    <ImageView
        android:id="@+id/ivDeleteFromBookmarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="8dp"
        android:visibility="gone"
        android:src="@drawable/ic_delete_from_bookmarks"
        />

</androidx.cardview.widget.CardView>
