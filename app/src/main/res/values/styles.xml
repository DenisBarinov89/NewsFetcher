<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BoldText">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="BoldText.ArticleTitle" parent="BoldText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BoldText.AppTitle" parent="BoldText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MediumText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DescriptionText">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SmallText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FilterTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Notifications">
        <item name="android:textSize">16sp</item>
    </style>

</resources>